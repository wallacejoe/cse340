<!--Content Heading-->
<% if (title) { %>
    <div id="account-grid" class="base-grid">
        <h1><%= title %></h1>
        <%- messages() %>
        <% if (errors) { %>
            <ul class="notice">
           <% errors.array().forEach(error => { %>
             <li><%= error.msg %></li>
          <%  }) %>
           </ul>
          <% } %>
          <h2>Welcome <%- locals.accountData.account_firstname %></h2>
          <p>You're logged in.</p>
          <p><a href="/account/edit-account">Edit Account Information</a></p>
          <% if (locals.accountData.account_type == "Employee" || locals.accountData.account_type == "Admin") {%>
            <h3>Inventory Management</h3>
            <p><a href="/inv/">Manage Inventory</a></p>
          <% } %>
          <h3>Message Center</h3>
          <ul>
            <li>You have <%- unread %> unread messages.</li>
            <li>Go to <a href="/message/">inbox</a></li>
          </ul>
    </div>
    <% } else {
      res.redirect('/')
    } %>