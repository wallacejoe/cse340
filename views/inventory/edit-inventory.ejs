<!--Content Heading-->
<% if (title) { %>
  <div id="edit-inventory-grid">
      <h1><%= title %></h1>
      <%- messages() %>
      <% if (errors) { %>
          <ul class="notice">
         <% errors.array().forEach(error => { %>
           <li><%= error.msg %></li>
        <%  }) %>
         </ul>
        <% } %>
      <form id="updateForm" action="/inv/update" method="post">
              <p>All fields are required.</p>
              <label class="top">Select Classification:<!--<select type="class" name="classification_id" required">-->
                  <%- options %>
              <!--</select>--></label>
              <label class="top">Make:<input type="text" name="inv_make" pattern=".{3,}$" required value="<%= locals.inv_make %>"></label>
              <label class="top">Model:<input type="text" name="inv_model" pattern=".{3,}$" required value="<%= locals.inv_model %>"></label>
              <label class="description">Description:<textarea name="inv_description" required><%= locals.inv_description %></textarea></label>
              <label class="top">Image Path:<input type="text" name="inv_image" required value="\images\vehicles\no-image.png"></label>
              <label class="top">Thumbnail Path:<input type="text" name="inv_thumbnail" required value="\images\vehicles\no-image-tn.png"></label>
              <label class="top">Price:<input type="text" name="inv_price" pattern="[0-9.]+" placeholder="decimal or integer" required value="<%= locals.inv_price %>"></label>
              <label class="top">Year:<input type="text" name="inv_year" pattern="[0-9]{4}$" placeholder="4-digit year" required value="<%= locals.inv_year %>"></label>
              <label class="top">Miles:<input type="text" name="inv_miles" placeholder="digits only" pattern="[0-9]+" required value="<%= locals.inv_miles %>"></label>
              <label class="top">Color:<input type="text" name="inv_color" required value="<%= locals.inv_color %>"></label>
              <input class="submitBtn" type="submit" name="submitf" value="Update Vehicle" disabled>
              <input type="hidden" name="inv_id"
              <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
              <% } %>>
      </form>
      <script src="../../js/inv-update.js"></script>
  </div>
  <% } else {
    res.redirect('/')
  } %>

